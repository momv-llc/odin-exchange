# ==============================================
# ODIN EXCHANGE - Environment Configuration
# ==============================================

# ============ General ============
NODE_ENV=production

# ============ Database ============
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=odin_exchange
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:your-secure-password-here@localhost:5432/odin_exchange?schema=public
DIRECT_URL=postgresql://postgres:your-secure-password-here@localhost:5432/odin_exchange?schema=public

# ============ Redis ============
REDIS_HOST=localhost
REDIS_PORT=6379

# ============ JWT Authentication ============
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ============ API Ports ============
API_PORT=3000
FRONTEND_PORT=3001

# ============ Email (SMTP) ============
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@odinexchange.com

# ============ Telegram Bot ============
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=
# Chat ID where admin notifications will be sent
TELEGRAM_ADMIN_CHAT_ID=

# ============ WhatsApp Business API ============
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_API_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=

# ============ Rate Limiting ============
THROTTLE_TTL=60
THROTTLE_LIMIT=60
